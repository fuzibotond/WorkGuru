<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statement_item_txt"
            android:fontFamily="@font/intermedium"
            android:text="Total number of hours today compared to yesterday"
            android:textSize="18dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
           >

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tracked_time_at_statement"
                android:fontFamily="@font/intermedium"
                android:textSize="26dp"
                android:textColor="@color/teal_900"
                android:text="07:12" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/less_tracked_time_at_statement"
                android:text="06:20"
                android:layout_marginStart="10dp"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/teal_100"
                    app:cardCornerRadius="10dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="4dp">
                        <ImageButton
                            android:layout_gravity="center_vertical"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_baseline_arrow_upward_24"
                            android:backgroundTint="@color/teal_100"
                            app:tint="@color/teal_900"
                           />
                        <TextView
                            android:textColor="@color/teal_900"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/percent_at_statement"
                            android:text="10:12%" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView >