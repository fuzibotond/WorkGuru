<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkGuruApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="primaryTitleStyle">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:color">@color/black</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeErrorColor">@color/red_500</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/teal_500</item>
        <item name="android:textColorHint">@color/teal_500</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_error_outline_24</item>
        <item name="errorIconTint">@color/red_500</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="android:colorAccent">@color/teal_500</item>
        <item name="colorControlActivated">@color/teal_500</item>
        <item name="colorControlHighlight">@color/teal_500</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/teal_500</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>